{
  "name": "@midnight-ntwrk/contracts-lib",
  "version": "0.1.0",
  "description": "Essential smart contracts library for Midnight blockchain development",
  "license": "GPL-3.0",
  "author": {
    "name": "Ricardo Rius",
    "email": "9488369+riusricardo@users.noreply.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/riusricardo/midnight-contracts.git",
    "directory": "contracts"
  },
  "keywords": ["midnight", "blockchain", "smart-contracts", "compact"],
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "compact": " compactc tokens/nft-zk/src/nft-zk.compact src/managed/nft-zk ",
    "test": "vitest run",
    "test:compile": "yarn compact && vitest run",
    "build": "rm -rf dist && tsc --project tsconfig.build.json && cp -Rf ./src/managed ./dist/managed && cp ./tokens/nft/src/nft.compact ./dist && cp ./tokens/nft-zk/src/nft-zk.compact ./dist",
    "lint": "eslint src",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "vitest": "^3.2.0",
    "@types/node": "^22.15.29"
  }
}